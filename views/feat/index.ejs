<div class="container-fluid">
	<h1>Feats</h1>

	<table class="table table-striped table-bordered">
		<tr>
			<th>Name</th>
			<th>Description</th>
			<th>Type</th>
			<th>Prerequisites</th>
			<th>Benefits</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>

		<% _.each(model, function(feat) { %>
		<tr>
			<td><%= feat.name %></td>
			<td><%= feat.description %></td>
			<td><%= feat.type %></td>
			<td class="prerequisite-td">
				<% _.each(feat.prerequisites, function(prerequisite, index) { %>
					<span>
						<% if(prerequisite.prefix){ %>
							<%= prerequisite.prefix -%>
						<% } %>
						<a href="/<%= prerequisite.object_type -%>/<%= prerequisite.object_id -%>">ObjectName</a>
						<span><% if(prerequisite.suffix){ %><%= prerequisite.suffix -%><% } %><% if(index != feat.prerequisites.length - 1){ %><span>,</span><% } %></span>
					</span>
				<% }) %>
			</td>
			<td><%= feat.benefits %></td>
			<td><a href="/feat/show/<%= feat.id %>">Show</a></td>
			<td><a href="/feat/edit/<%= feat.id %>">Edit</a></td>
			<td><a href="/feat/destroy/<%= feat.id %>">Delete</a></td>
		</tr>

		<% }) %>


	</table>
</div>
